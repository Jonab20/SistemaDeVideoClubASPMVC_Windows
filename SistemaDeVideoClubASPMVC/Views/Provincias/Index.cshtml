@model   IEnumerable<SistemaDeVideoClubASPMVC.ViewModels.Provincia.ProvinciaListViewModel>
@{
    ViewBag.Title = "Provincias";

}

<div>
    <a href="@Url.Action("Create", "Provincias")" class="btn btn-primary" style="float: right">
        <i class="far fa-file-alt"></i>
        Nuevo
    </a>
    <h2>Lista de Provincias</h2>
    <hr />

</div>
@if (TempData["Msg"] != null)
{
    var msg = (string)TempData["Msg"];
<div class="alert alert-success alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Éxito!</strong> @msg.
</div>}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.NombreProvincia)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.NombreProvincia)
                </td>
                <td>

                    <a href="@Url.Action("Edit","Provincias",new{id=item.ProvinciaId})" class="btn btn-warning"><i class="fas fa-edit"></i> Editar</a>
                    @*<a href="@Url.Action("Details","Provincias",new{id=item.ProvinciaId})" class="btn btn-info"><i class="fas fa-edit"></i> Detalles</a>*@
                    <a href="@Url.Action("Delete","Provincias",new{id=item.ProvinciaId})" class="btn btn-danger"><i class="fas fa-edit"></i> Borrar</a>

                   </td>
            </tr>
         }


    </tbody>
</table>
