@model  SistemaDeVideoClubASPMVC.ViewModels.Pelicula.PeliculaListViewModel


@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Pelicula</h2>
<h2>¿Desea borrar la pelicula?</h2>
<hr />
@using (Html.BeginForm("Delete", "Peliculas", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Titulo)
        @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control", @readonly = true })
    </div>
    <div class="row">
        <div class="col">

            <div class="form-group">
                @Html.LabelFor(m => m.Calificacion)
                @Html.TextBoxFor(m => m.Calificacion, new { @class = "form-control", @readonly = true })
            </div>

    </div>
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.Estado)
                @Html.TextBoxFor(m => m.Estado, new { @class = "form-control", @readonly = true })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Genero)
            @Html.TextBoxFor(m => m.Genero, new { @class = "form-control", @readonly = true })
        </div>
    </div>


    <div class="form-group">
        <button class="btn btn-danger" type="submit">Borrar</button>
        <a href="@Url.Action("Index", "Peliculas")" class="btn btn-success">Volver</a>

    </div>
    
}
