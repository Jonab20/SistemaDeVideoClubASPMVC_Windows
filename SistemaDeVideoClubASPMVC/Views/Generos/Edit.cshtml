@model  SistemaDeVideoClubASPMVC.ViewModels.Genero.GeneroEditViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Editar Genero </h2>
<hr />

@using (Html.BeginForm("Edit", "Generos", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.GeneroId)
    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion)
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button class="btn btn-warning" type="submit"><i class="fas fa-edit"></i> Editar</button>
        <a href="@Url.Action("Index", "Generos")" class="btn btn-success">
            <i class="fas fa-backspace"></i>
            Volver
        </a>

    </div>
 }