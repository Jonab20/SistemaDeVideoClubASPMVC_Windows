@model  SistemaDeVideoClubASPMVC.ViewModels.Localidad.LocalidadEditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Localidad</h2>
<hr />
@using (Html.BeginForm("Edit", "Localidades", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.LocalidadId)
    <div class="form-group">
        @Html.LabelFor(m => m.ProvinciaId)
        @Html.DropDownListFor(m => m.ProvinciaId, new SelectList(Model.Provincias, "ProvinciaId", "NombreProvincia"), "Seleccione Provincia", new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.ProvinciaId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NombreLocalidad)
        @Html.TextBoxFor(m => m.NombreLocalidad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NombreLocalidad, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Guardar</button>
        <a href="@Url.Action("Index", "Localidades")" class="btn btn-success">Volver</a>

    </div>
}

