@model  SistemaDeVideoClub.Entidades.ViewModels.Estado.EstadoEditViewModel


@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Estado</h2>
<hr/>
@using (Html.BeginForm("Delete", "Estados", FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.EstadoId)
    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion)
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", disabled = "disable" })
    </div>
    //TODO arreglar
    <div class="form-group">
        <button class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Borrar
        </button>
        <a href="@Url.Action("Index", "Estados")" class="btn btn-success">
            <i class="fas fa-backspace"></i>
            Volver
        </a>
    </div>
 }